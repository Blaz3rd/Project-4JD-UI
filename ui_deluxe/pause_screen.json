{
  "namespace": "pause_deluxe",

  /////////////////////////////////////////////////////////////////////////////
  //  Skins Panel.
  /////////////////////////////////////////////////////////////////////////////

  "skin_panel@start.skin_panel": {
    "size": [ "50% - 100px", 124 ],
    "offset": [ 0, "-10%" ],
    "controls": [
      {
        "change_skin_panel": {
          "type": "panel",
          "controls": [
            { "change_skin_button@pause.change_skin_button": {} },
            { "change_skin_button_gamepad@pause.change_skin_button_gamepad": {} }
          ]
        }
      },
      { "viewer_panel@start.skin_viewer_panel": { } }
    ]
  },

  /////////////////////////////////////////////////////////////////////////////
  //  Toggles.
  /////////////////////////////////////////////////////////////////////////////

  "show_player_list_panel": {
    "type": "panel",
    "size": [ 24, "100%" ],
    "layer": 10,
    "$tab_icon": "play.friends_icon_2",
    "$tab_icon_2": "play.friends_icon_1",
    "$tab_icon_nobounce": "common_deluxe.null_panel",
    "$tab_icon_nobounce_2": "common_deluxe.null_panel",
    "controls": [
      {
        "friends_navigation_tab_content@play.friends_navigation_tab_content": {}
      }
    ]
  },

  "show_player_list_toggle@common_toggles.light_template_toggle": {
    "size": [ 24, 24 ],
    "layer": 5,
    "$binding_type": "global",
    "$binding_condition": "once",
    "$enable_directional_toggling": false,
    "enabled": "$enabled",

    "$toggle_name": "show_player_list",
    "$toggle_view_binding_name": "show_player_list_toggle",
    "$toggle_binding_type": "global",
    "$toggle_state_binding_name": "#show_player_list"
  },

  /////////////////////////////////////////////////////////////////////////////
  //  Panels.
  /////////////////////////////////////////////////////////////////////////////

  "trialTime": {
    "type": "custom",
    "ignored": "(not $trial)",
    "renderer": "trial_time_renderer",
    "size": [ "default", 10 ],
    "offset": [ -2, -4 ],
    "layer": 3,
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "bindings": [
      {
        "binding_name": "#is_trial_version",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "game_menu_label": {
    "type": "label",
    "offset": [ 0, "13%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "text": "pauseScreen.title",
    "shadow": true,
    "font_size": "medium"
  },

  "online_buttons_panel": {
    "type": "panel",
    "anchor_to": "bottom_left",
    "anchor_from": "bottom_left",
    "size": [ "50% - 100px", 32 ],
    "offset": [ 0, "-10%" ],
    "controls": [
      {
        "stacked_column": {
          "type": "stack_panel",
          "size": [ "100%", "100%" ],
          "offset": [ "5%", 0 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "orientation": "horizontal",
          "controls": [
            {
              "feedback_padding": {
                "type": "panel",
                "size": [ "5%", 0 ],
                "bindings": [
                  {
                    "binding_name": "#feedback_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "feedback_btn@start.column_frame": {
                "ignored": "(not $pre_release or $apple_tv)",
                "size": [ 28, 32 ],
                "controls": [
                  { "feedback_button@start.feedback_button": { } }
                ]
              }
            },
            {
              "show_player_list_toggle_padding": {
                "type": "panel",
                "size": [ "6px", 0 ],
                "bindings": [
                  {
                    "binding_name": "#is_full_version",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            },
            {
              "show_player_list_toggle_btn@start.column_frame": {
                "size": [ 28, 32 ],
                "controls": [
                  { "show_player_list_toggle@pause_deluxe.show_player_list_toggle": { } },
                  { "show_player_list_panel@pause_deluxe.show_player_list_panel": { } }
                ],
                "bindings": [
                  {
                    "binding_name": "#is_full_version",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#online_buttons_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "player_panel@common.focus_border_white": {
    "size": [ "100% -16px", "100% -31px" ],
    "offset": [ 0, -8 ],
    "color": [ 0, 0, 0 ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "visible": "(not $trial)",
    "controls": [
      { "player_panel_background@pause.player_panel_background": {} }
    ]
  },

  /////////////////////////////////////////////////////////////////////////////
  //  Main Buttons Panel.
  /////////////////////////////////////////////////////////////////////////////

  "return_to_game_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_continue",
    "$button_text": "menu.returnToGame"
  },

  "how_to_play_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_how_to_play",
    "$button_text": "menu.howToPlay"
  },

  "quit_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_quit",
    "$button_text": "pauseScreen.quit",
    "variables": [
      {
        "requires": "$is_secondary_client",
        "$button_text": "pauseScreen.secondaryClientLeave"
      }
    ]
  },

  "server_store_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_server_store",
    "$button_text": "$server_store_button_text"
  },

  "feed_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_feed",
    "$button_text": "pauseScreen.feed"
  },

  "take_screenshot_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.screenshot",
    "$button_text": "action.interact.takepicture"
  },

  "invite_player_button@start_deluxe.main_button": {
    "$pressed_button_name": "button.menu_invite_players",
    "$button_text": "pauseScreen.invite"
  },

  "main_buttons_panel@start_deluxe.main_buttons_panel": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [ 0, "32%" ],
    "controls": [
      {
        "stacked_rows": {
          "type": "stack_panel",
          "size": [ "100%", "100%" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            {
              "stacked_row_0@start_deluxe.stacked_row": {
                "controls": [
                  { "return_to_game_button@pause_deluxe.return_to_game_button": { } }
                ]
              }
            },
            {
              "stacked_row_1@start_deluxe.stacked_row": {
                "ignored": "$is_secondary_client",
                "controls": [
                  { "server_store_button@pause_deluxe.server_store_button": { } }
                ],
                "bindings": [
                  {
                    "binding_name": "#server_store_button_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            },
            {
              "stacked_row_2@start_deluxe.stacked_row": {
                "controls": [
                  { "settings_button@start_deluxe.settings_button": { } }
                ]
              }
            },
            {
              "stacked_row_3@start_deluxe.stacked_row": {
                "controls": [
                  { "how_to_play_button@pause_deluxe.how_to_play_button": { } }
                ]
              }
            },
            {
              "stacked_row_4@start_deluxe.stacked_row": {
                "ignored": "$achievements_ignored",
                "controls": [
                  { "achievements_button@start_deluxe.achievements_button": { } }
                ],
                "bindings": [
                  {
                    "binding_name": "#achievements_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "stacked_row_5@start_deluxe.stacked_row": {
                "controls": [
                  { "quit_button@pause_deluxe.quit_button": { } }
                ]
              }
            },
            {
              "stacked_row_6@start_deluxe.stacked_row": {
                "controls": [
                  { "buy_game_button@start_deluxe.buy_game_button": {} }
                ],
                "ignored": "(not $trial)",
                "bindings": [
                  {
                    "binding_name": "#is_trial_version",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "gamepad_helpers@start.gamepad_helpers": {
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [ 0, 0 ],
    "controls": [
      { "gamepad_helper_a@common.gamepad_helper_a": {} }
    ]
  },

  "player_list_panel": {
    "type": "panel",
    "size": [ 245, "68%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [ 0, "32% -20px" ],
    "layer": 20,
    "$dialog_background": "common.dialog_background_opaque",
    "controls": [
      {
        "panel_label@common.section_heading_label": {
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 8 ],
          "layer": 10,
          "text": "key.playerlist"
        }
      },
      { "players@pause_deluxe.player_panel": { } },
      { "common_panel@common.common_panel": { "$show_close_button": false } }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "show_player_list_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  /////////////////////////////////////////////////////////////////////////////
  //  Screens.
  /////////////////////////////////////////////////////////////////////////////

  "pause_screen_content@pause.pause_screen_content": {
    "controls": [
      { "gamepad_helpers@pause_deluxe.gamepad_helpers": { } },
      { "trialTime@pause_deluxe.trialTime": { } },
      {
        "title_panel_content@common_art_deluxe.title_panel_content": { //Modified
          "$splash_text_visible": false
        }
      },
      { "main_buttons_panel@pause_deluxe.main_buttons_panel": { } },
      { "online_buttons_panel@pause_deluxe.online_buttons_panel": { } },
      { "skin_panel@pause_deluxe.skin_panel": { "layer": 1 } },
      { "player_list_panel@pause_deluxe.player_list_panel": { } }
    ]
  }
}